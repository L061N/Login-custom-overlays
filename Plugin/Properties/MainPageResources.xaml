<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:styles="clr-namespace:SimHub.Plugins.Styles;assembly=SimHub.Plugins"
    xmlns:local.viewmodels="clr-namespace:LoginDynamics.Plugin.ViewModels"
    xmlns:local.views="clr-namespace:LoginDynamics.Plugin.Views">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Colors.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/Blue.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/BaseDark.xaml" />
        <ResourceDictionary Source="pack://application:,,,/SimHub.Plugins;component/Styles/SimHubStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>
    

    <DataTemplate x:Key="WorkspacesTemplate">
        <styles:SHTabControl ItemsSource="{Binding}">
            <styles:SHTabControl.ContentTemplate>
                <DataTemplate>
                    <ScrollViewer>
                        <DockPanel>
                            <ContentControl DockPanel.Dock="Bottom" Content="{Binding DataContext.Footer, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                            <ContentControl Content="{Binding}" />
                        </DockPanel>
                    </ScrollViewer>
                </DataTemplate>
            </styles:SHTabControl.ContentTemplate>
            <styles:SHTabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayName}" />
                </DataTemplate>
            </styles:SHTabControl.ItemTemplate>
            <styles:SHTabControl.Resources>
                <DataTemplate DataType="{x:Type local.viewmodels:FooterViewModel}">
                    <local.views:FooterView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type local.viewmodels:GeneralViewModel}">
                    <local.views:GeneralView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type local.viewmodels:StandingsViewModel}">
                    <local.views:StandingsView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type local.viewmodels:ExtrasViewModel}">
                    <local.views:ExtrasView />
                </DataTemplate>
            </styles:SHTabControl.Resources>
        </styles:SHTabControl>
    </DataTemplate>
</ResourceDictionary>